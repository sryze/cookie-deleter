{
    "manifest_version": 2,
    "name": "Cookie Monster",
    "version": "1.0.2",
    "description": "This extension lets you easily delete all cookies for current tab/site with a single click.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "*://*/*",
        "cookies",
        "contextMenus",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
}
